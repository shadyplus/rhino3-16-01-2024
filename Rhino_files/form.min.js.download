$(function(){
	$('.field-gkk input').focus(function(){
		$(this).parent().addClass('act-gkk');
	});
	$('.field-gkk input').blur(function(){
		var vr = $(this).val();
		if(vr.length < 1){
    		$(this).parent().removeClass('act-gkk');
  		}
	})
	
	$('body').on('click', '.items-list .select', function(){
		$(this).parents('.phone-code-modal').hide();
	});
	
	var today = new Date();
	var dd = String(today.getDate()).padStart(2, '0');
	var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
	var yyyy = today.getFullYear();
	today = dd + '.' + mm + '.' + yyyy;
	$('.date-now').text(today);
});
		